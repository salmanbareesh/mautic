{% if emailStats is defined %}
<div class="lead-stats-title">{{ 'mautic.lead.stats.email_title'|trans }}</div>
<div class="lead-stats">
    <div class="lead-stats-el">
        <span class="lead-stats-name">{{ 'mautic.lead.stats.sent_count'|trans }}</span>
        <span class="lead-stats-val">{{ emailStats['sent_count'] }}</span>
    </div>
    <div>
        <span class="lead-stats-name">{{ 'mautic.lead.stats.open_rate'|trans }}</span>
        <span class="lead-stats-val">{{ emailStats['open_rate'] * 100 }}%</span>
    </div>
    <div>
        <span class="lead-stats-name">{{ 'mautic.lead.stats.click_through_rate'|trans }}</span>
        <span class="lead-stats-val">{{ emailStats['click_through_rate'] * 100 }}%</span>
    </div>
    <div>
        <span class="lead-stats-name">{{ 'mautic.lead.stats.click_through_open_rate'|trans }}</span>
        <span class="lead-stats-val">{{ emailStats['click_through_open_rate'] * 100 }}%</span>
    </div>
</div>
{% if emailStats['sent_count'] == 0 and
    emailStats['open_rate'] == 0 and
    emailStats['click_through_rate'] == 0 and
    emailStats['click_through_open_rate'] == 0
%}
    {{ include('@MauticCore/Helper/no_information.html.twig', {'tip': 'mautic.contact.noinformation.statistics'|trans}) }}
{% endif %}
{% endif %}
